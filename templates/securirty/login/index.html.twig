{% extends 'layout.html.twig' %}

{% block content %}
    <div class="vh-100 bg-light-gray">

        <div class="d-flex flex-column gap-3 mx-auto col col-md-5 col-xl-3 pt-5 px-3">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post">
                <div class="d-flex flex-column gap-3">
                    <div class="d-flex flex-column gap-1">
                        <label class="form-label ms-3 mb-0" for="username">Username:</label>
                        <input class="form-control" type="text" id="username" name="_username"
                               value="{{ last_username }}">
                    </div>
                    <div class="d-flex flex-column gap-1">
                        <label class="form-label ms-3 mb-0" for="password">Password:</label>
                        <input class="form-control" type="password" id="password" name="_password">
                    </div>

                    <input type="hidden" name="_target_path" value="{{ path('app_admin_dashboard') }}">

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" class="btn btn-primary text-white mt-3">login</button>
                </div>
            </form>
        </div>

    </div>
{% endblock %}